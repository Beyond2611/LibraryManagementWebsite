<!DOCTYPE html>
<html lang="en">

<head>
    <title> Libib | Library Management Web </title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <script defer src="/js/library.js"></script>
</head>

<body>
    <div class="user-interface">
        <div class="navigation-bar">
            <div class="logo">
                <a href="/home">
                    <p> Libib </p>
                </a>
                <a href="/home"> <i class="fa-solid fa-book-open"></i> </a>
            </div>
            <div class="list-option">
                <ul>
                    <a href="/library">
                        <li class="active"> <i class="fa-solid fa-book"></i>
                            <p>Library</p>
                        </li>
                    </a>
                    <a href="/my-collection">
                        <li class="inactive"> <i class="fa-solid fa-book"></i>
                            <p> My Collection </p>
                        </li>
                    </a>
                    <%if(session.perm[0].manage_book){%>
                        <a href="/add-book">
                            <li class="inactive"><i class="fa-solid fa-circle-plus"></i>
                                <p>Add books</p>
                            </li>
                        </a>
                        <%}%>
                            <a href="/book-ranking">
                                <li class="inactive">
                                    <i class="fa-solid fa-trophy"></i>
                                    <p> Book Ranking</p>
                                </li>
                            </a>
                            <a href="/setting">
                                <li class="inactive"> <i class="fa-solid fa-gear"></i>
                                    <p> Settings</p>
                                </li>
                            </a>
                            <a href="/support">
                                <li class="inactive"> <i class="fa-brands fa-rocketchat"></i>
                                    <p> Support</p>
                                </li>
                            </a>
                            <a href="/logout">
                                <li class="inactive"> <i class="fa-solid fa-right-from-bracket"></i>
                                    <p>Logout</p>
                                </li>
                            </a>
                </ul>
            </div>
            <ul class="list-sci">
                <li>
                    <a href="#" class="fa-brands fa-instagram"></a>
                </li>
                <li>
                    <a href="#" class="fa-brands fa-twitter"></a>
                </li>
                <li>
                    <a href="#" class="fa-brands fa-youtube"></a>
                </li>
            </ul>
        </div>
        <div class="container">
            <div class="library-tools">
                <div class="library-header">
                    <form class="search-panel" action="/library" method="POST">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        <input type="search" placeholder="Start Searching..." name="search" id="search">
                    </form>
                    <a class="user-profile me-auto" href="/profile/<%=session.user_id%>">
                        <div class="user-box">
                            <i class="fa-solid fa-circle-user"></i>
                            <div class="username">
                                <%= session.profile[0].account%>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="az-filter">
                    <% for(var item of session.BookLetters) {%>
                        <span href="#<%= item %>" onclick="smoothScroll('<%= item %>')"> <%= item %> </span>
                        <% } %>

                </div>
            </div>
            <div class="book-show">
                <% for(var item of session.BookLetters) { %>
                    <div class="first-letter" id="<%= item %>">
                        <%= item %>
                    </div>
                    <div class="list-book">
                        <% for(var i = 0; i < session.Bookdata.length; i++){%>
                            <% if(session.Bookdata[i].book_title[0].toUpperCase() == item){ %>
                                <a href="/book/<%=session.Bookdata[i].book_id%>" class="item-cover-book">
                                            <img src="<%=session.Bookdata[i].cover%>" data-join-id="104229468">
                                            <div class="book-title"> <%= session.Bookdata[i].book_title %> </div>
                                            <div class="book-author"> <%= session.Bookdata[i].author %></div>
                            
                                </a>
                                <% } %>
                                    <% } %>

                    </div>
                    <% } %>
            </div>

        </div>
    </div>
</body>

</html>