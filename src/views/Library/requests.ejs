<!DOCTYPE html>
<html lang="en">

<head>
    <title> Libib | Requests </title>
    <%- include('../templates/library-stylesheet.ejs') %>
</head>

<body>
    <div class="user-interface">
        <% const page="support" %>
            <%- include('../templates/nav-bar.ejs') %>
                <div class="container">
                    <%- include('../templates/header.ejs') %>
                        <form class="requests">
                            <ul class="accordion">
                                <li class="accordion-item">
                                    <div class="accordion-item-header">
                                        Request from Account : num_book books
                                        <i class="fa-solid fa-exclamation"></i>
                                    </div>
                                    <div class="accordion-item-body">
                                        <div class="acc-book">
                                            <div class="acc-book-num">
                                                1
                                            </div>
                                            <div class="acc-book-img">
                                                <img src="../images/image-not-available.jpg">
                                            </div>
                                            <div class="acc-book-item-info">
                                                <div class="acc-book-item-title"> Thien su nha ben vol 1 </div>
                                                <div class="acc-book-item-author"> Author </div>
                                            </div>
                                            <div class="wrapper">
                                                <input type="radio" name="book_id" id="option-1">
                                                <input type="radio" name="book_id" id="option-2">
                                                <label for="option-1" class="option option-1">
                                                <div class="dot dot-accept"></div>
                                                 <span>Accept</span>
                                                 </label>
                                                <label for="option-2" class="option option-2">
                                                <div class="dot dot-decline"></div>
                                                 <span>Decline</span>
                                              </label>
                                            </div>
                                        </div>

                                    </div>
                                </li>

                            </ul>
                            <input type="submit" value="Update">
                        </form>
                </div>
    </div>

</body>
<%- include('../templates/change-theme.ejs') %>

</html>